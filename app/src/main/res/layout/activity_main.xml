<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.jude.lifegame.lifeview.LifeViewLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/tool">
        <com.jude.lifegame.lifeview.LifeView
            android:id="@+id/life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.jude.lifegame.lifeview.LifeViewLayout>

    <LinearLayout
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@android:color/black">
        <Button
            android:id="@+id/start"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="开始"/>
        <Button
            android:id="@+id/pause"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="暂停"/>
        <Button
            android:id="@+id/step"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="单步"/>
        <Button
            android:id="@+id/replay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="重置"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_above="@+id/tool">
        <Button
            android:id="@+id/bigger"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"/>
        <Button
            android:id="@+id/smaller"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="—"/>
    </LinearLayout>
    <SeekBar
        android:id="@+id/speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tool"
        android:layout_margin="8dp"
        android:layout_alignTop="@+id/zoom"
        android:layout_alignBottom="@+id/zoom"
        android:layout_toRightOf="@+id/zoom"
        android:progress="50" />
</RelativeLayout>
